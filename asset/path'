function getRandomIndex(max) {
    return Math.floor(Math.random() * max);
}
let imageSrc = []


function imageArray(){     
    //declare an array to store images//
    // Array of image paths
   
    //0,1,2,3,4,5,6,7,
    imageSrc[0] = "asset/icons8-knight-48 (1).png";
    imageSrc[1] = "asset/image/icons8-queen-94.png";
    imageSrc[2] = "asset/image/icons8-bishop-94.png";
    imageSrc[3] = "asset/image/icons8-chess-board-64.png";
    imageSrc[4] = "asset/image/icons8-rook-48.png";
    imageSrc[5] = "asset/image/icons8-pawn-94.png";
    imageSrc[6] = "asset/image/icons8-chess-clock-48.png";
    imageSrc[7] = "asset/image/icons8-chess-board-64 (1).png";
    imageSrc[8] = "https://images.pexels.com/photos/411207/pexels-photo-411207.jpeg?cs=srgb&dl=pexels-sebastian-411207.jpg&fm=jpg&_gl=1*1f6939*_ga*MzYwOTQ4MTc2LjE3MTU1Mzk4Mzc.*_ga_8JE65Q40S6*MTcxNzg4NzkzMi4xOC4xLjE3MTc4ODc5NTIuMC4wLjA.";

    let randomIndex = getRandomIndex(imageSrc.length);
    let randomImageSrc = imageSrc[randomIndex];
    console.log('randomImageSrc = ', randomImageSrc);
}

let imgElement = document.createElement('img');
imgElement.src = randomImageSrc;
imgElement.alt = 'Random Image';
imgElement.style.maxWidth = '100%';
// Create an img element


document.addEventListener("DOMContentLoaded", function () {
    document.getElementsByTagName("button");
    imageArray.addEventListener("click", function () {
        // Add a click event listener to the image
        imgElement.addEventListener('click', () => {
            let randomIndex = getRandomIndex(imageSrc.length);
            let randomImageSrc = imageSrc[randomIndex];
            console.log('new image', randomImageSrc)
            document.getElementById("button").src = randomImageSrc;

            for (let button of buttons) {
                button.addEventListener("click", function () {
                    if (this.getAttribute("data-type") === "search") {
                        alert("clicked Search!");
                    } else {
                        let gameType = this.getAttribute("data-type");
                        alert(`clicked ${gameType}`);
                    }
                });
            }
        });

    })
});

