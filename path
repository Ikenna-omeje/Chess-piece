  function resetGame() {
    const resetButton = document.getElementById('bttn');
        resetButton.disabled = true; // Disable the start button
        handleClick();
        const imageInterval = setInterval(() => {
            if (imageCount < maxImages) {
                handleClick();
            } else {
                clearInterval(imageInterval);
               let preScore = 0;
                document.getElementById('correct').innerText;

            }
        }, 8000); // Display a new image every second
    }

    const resetBttn = document.getElementById('bttn');
    // Add event listener to the reset button
        resetBttn.addEventListener('click', resetGame);




